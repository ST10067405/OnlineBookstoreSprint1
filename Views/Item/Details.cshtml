@model EpicBookstore.Models.ItemModel

@{
    ViewData["Title"] = "ItemDetails";
}

@*For Icons*@
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <style>

        .container {
            display: flex;
            flex-wrap: wrap;
        }

        .item-container {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 20px;
            flex: 1;
            height: auto;
            width: 1200px;
        }

        .price-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 20px;
            width: 200px;
            margin-left: 50px;
            height: 200px;
        }

        .item-details {
            display: flex;
            flex-direction: column;
            flex: 1;
            margin-left: 10px;
        }

        .item-image {
            width: 150px;
            height: 200px;
            object-fit: cover;
        }

        .item-title {
            font-size: 1.5rem;
            margin-bottom: 10px;
            margin-left: 20px;
        }

        .item-description {
            margin-bottom: 10px;
            margin-left: 20px;
        }

        .item-price {
            margin-bottom: 10px;
            font-size: 1.5rem;
            color: #ff0000;
        }

        .item-quantity {
            margin-bottom: 10px;
        }

        .add-to-cart-button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

            .add-to-cart-button i {
                margin-left: 5px;
            }

    </style>
</head>
<body>
    <h2>Book Details</h2>
    <div class="container">
        <div class="item-container">
            <img src="@Model.CoverImageUrl" alt="Item Image" class="item-image">
            <div class="item-details">
                <h2 class="item-title">@Model.Name</h2>
                <p class="item-description">@Model.Description</p>
            </div>
        </div>
        <div class="price-container">
            <div>
                <h2 class="price-title">PRICE</h2>
            </div>
            <div>
                <p class="item-price">@Model.Price.ToString("C")</p>
            </div>
            <div>
                <button type="submit" class="add-to-cart-button" onclick="addToCart('@Model.Name', '@Model.Price')">
                    Add to Cart
                    <i class='bx bxs-cart-add bx-sm'></i>
                </button>
            </div>
        </div>
    </div>

</body>
</html>




