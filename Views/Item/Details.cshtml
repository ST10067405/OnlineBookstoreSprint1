@model EpicBookstore.Models.ItemModel

@{
    ViewData["Title"] = "ItemDetails";
}


@*For Icons*@
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <style>
        .item-container {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 20px;
            margin-right: 150px;
        }

        .item-details {
            display: flex;
            flex-direction: column;
            flex: 1;
            margin-left: 10px;
        }

        .item-image {
            width: 100px;
            height: 150px;
            object-fit: cover;
        }

        .item-title {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .item-description {
            margin-bottom: 10px;
        }

        .item-price {
            margin-bottom: 10px;
        }

        .item-quantity {
            margin-bottom: 10px;
        }

        .delete-button {
            background-color: red;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
   
    <div class="item-container">
        <img src="@Model.CoverImageUrl" alt="Item Image" class="item-image">
        <div class="item-details">
            <h2 class="item-title">@Model.Name</h2>
        </div>
        <div>
            <p>Price: @Model.Price.ToString("C")</p>
            <div class="tile-btn-container">
                <button type="button" class="tile-btn" onclick="addToCart('@Model.Name', '@Model.Price')">
                    <i class='bx bxs-cart-add bx-sm'></i>
                </button>
        </div>
    </div>
    </div>
    <div class="item-details">
        <h2 class="item-details">Description</h2>
        <p class="item-description">@Model.Description</p>
    </div>
        
</body>
</html>

