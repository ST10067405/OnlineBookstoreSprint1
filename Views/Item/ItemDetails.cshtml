@model EpicBookstore.Models.ItemModel

@{
    ViewData["Title"] = "ItemDetails";
}

<div class="item-details-container">
    @if (Model != null)
    {
        <h1 class="item-details-header">Item Details</h1>

        <div class="item-details-content">
            <h2 class="item-details-title">@Model.Name</h2>
            <p class="item-details-description">@Model.Description</p>
            <p class="item-details-author">Author: @Model.Author</p>
            <p class="item-details-price">Price: @Model.Price.ToString("C")</p>
            <p class="item-details-stock">Stock: @Model.Stock</p>
            <p class="item-details-isbn">ISBN: @Model.ISBN</p>

            @if (Model.Stock > 0)
            {
                <form action="/Cart/AddItem" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary add-to-cart-button">Add to Cart</button>
                </form>
            }
            else
            {
                <p class="item-details-stock-message">Out of Stock</p>
            }
        
        else
        {
            <p class="item-details-message">Nothing to display</p>
        }
        
    </div>
    }
</div>


